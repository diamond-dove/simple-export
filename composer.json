{
  "name": "diamond-dove/simple-export",
  "description": "Read and write simple Excel, CSV and JSON files",
  "keywords": [
    "diamond-dove",
    "simple-export"
  ],
  "homepage": "https://github.com/diamond-dove/simple-export",
  "license": "MIT",
  "authors": [
    {
      "name": "Fermin Perdomo",
      "email": "masterfermin02@gmail.com",
      "homepage": "https://masterfermin02.github.io/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "box/spout": "^3.0",
    "illuminate/support": "^6.3|^7.0|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "spatie/phpunit-snapshot-assertions": "^4.0",
    "spatie/temporary-directory": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "DiamondDove\\SimpleExport\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DiamondDove\\SimpleExport\\Tests\\": "tests"
    }
  },
  "scripts": {
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
